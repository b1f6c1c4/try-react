import { fromJS } from 'immutable';

import {
  select{{ properCase name }},
  makeSelect{{ properCase name }}Data,
} from '../selectors';

describe('select{{ properCase name }}', () => {
  it('should select the {{ camelCase name }} state', () => {
    const state = fromJS({
      key: 'value',
    });
    const mockedState = fromJS({
      {{ camelCase name }}: state,
    });
    expect(select{{ properCase name }}(mockedState)).toEqual(state);
  });
});

describe('makeSelect{{ properCase name }}Data', () => {
  const select{{ properCase name }}Data = makeSelect{{ properCase name }}Data();

  it('should select data', () => {
    const data = fromJS({
      key: 'value',
    });
    const state = fromJS({
      data,
    });
    const mockedState = fromJS({
      {{ camelCase name }}: state,
    });
    expect(select{{ properCase name }}Data(mockedState)).toEqual(data);
  });
});
